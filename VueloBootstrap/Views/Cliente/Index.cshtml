@model VueloBootstrap.Models.Cliente;
@{
    ViewData["Title"] = "Cliente";
    var clientes = ViewData["clientes"] as List<Cliente>;
}
<h1>Gerenciamento de Clientes</h1>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>Clientes Cadastrados</h2>
            <table class="table" style="color:#fff;">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Endereço</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cliente in clientes)
                        {
                            <tr>
                                <td>@cliente.Id</td>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Email</td>
                                <td>@cliente.Telefone</td>
                                <td>@cliente.Endereco</td>
                                <td>
                                    <form asp-controller="Cliente" asp-action="Deletar">
                                        <button class="btn btn-danger" type="submit">x deletar</button>
                                        <input asp-for="Id" style="visibility:hidden;" type="text" value="@cliente.Id">
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <h2>Cadastrar</h2>
            <form asp-action="Index">
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label for="">Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Seu Nome:" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id=""
                            placeholder="seuemail@seuamil.com" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="(xx)xxxxx-xxxx" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Endereço</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="" placeholder="Seu Endereço:" />
                    </div>

                </div>

                <button type="submit" class="btn btn-primary">Incluir</button>

            </form>

            <br />
            <hr />
            <br />
            <h2>Atualizar Dados</h2>
            <form asp-controller="Cliente" asp-action="Atualizar">

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="">Código do cliente</label>
                        <select class="custom-select" asp-for="Id">
                            <option selected>-- Selecione um código</option>
                            @{
                                foreach (var cliente in clientes)
                                {
                                    <option>@cliente.Id</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Seu Nome">
                    </div>

                    <div class="form-group col-md-3">
                        <label for="">Email</label>
                        <input asp-for="Email" type="text" class="form-control" id="" placeholder="seumail@seuemail.com">
                    </div>

                    <div class="form-group col-md-3">
                        <label for="">Telefone</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="(xx)xxxxx-xxxx">
                    </div>

                    <div class="form-group col-md-3">
                        <label for="">Endereço</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="" placeholder="Seu Endereco">
                    </div>
                    
                </div>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>


        </div>
    </div>
</div>
