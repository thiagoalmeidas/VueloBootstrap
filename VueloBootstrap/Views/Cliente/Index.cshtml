@model VueloBootstrap.Models.Cliente;
@{
    ViewData["Title"] = "Cliente";
    var clientes = ViewData["clientes"] as List<Cliente>;
}
<h1>Gerenciamento de Clientes</h1>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>Clientes Cadastrados</h2>
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Endereço</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var cliente in clientes)
                            {
                                <tr>
                                    <td>@cliente.Id</td>
                                    <td>@cliente.Nome</td>
                                    <td>@cliente.Email</td>
                                    <td>@cliente.Telefone</td>
                                    <td>@cliente.Endereco</td>
                                </tr>
                            }
                    }
                </tbody>
            </table>

            <h2>Cadastrar</h2>
            <form asp-action="Index">
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label for="">Nome</label>
                        <input asp-for="Nome" type="text" class="form-control" id="" placeholder="Seu Nome:" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Nome</label>
                        <input asp-for="Email" type="text" class="form-control" id="" placeholder="seuemail@seuamil.com" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Nome</label>
                        <input asp-for="Telefone" type="text" class="form-control" id="" placeholder="(xx)xxxxx-xxxx" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Nome</label>
                        <input asp-for="Endereco" type="text" class="form-control" id="" placeholder="Seu Endereço:" />
                    </div>

                    <button type="submit" class="btn btn-primary">Incluir</button>

                </div>
            </form>
        </div>
    </div>
</div>
