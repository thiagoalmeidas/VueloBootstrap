@model VueloBootstrap.Models.Origem;
@{
    ViewData["Title"] = "Origem";
    var origens = ViewData["origens"] as List<Origem>;
}
<h1>Gerenciamento de Origems</h1>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h2>Origems Cadastrados</h2>
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Endereço</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var origem in origens)
                        {
                            <tr>
                                <td>@origem.Id</td>
                                <td>@origem.pais_origem</td>
                                <td>@origem.cidade_origem</td>
                                <td>@origem.preco_origem</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <h2>Cadastrar</h2>
            <form asp-action="Index">
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label for="">País</label>
                        <input asp-for="pais_origem" type="text" class="form-control" id="" placeholder="País:" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Cidade</label>
                        <input asp-for="cidade_origem" type="text" class="form-control" id="" placeholder="Cidade:" />
                    </div>

                    <div class="form-group col-md-6">
                        <label for="">Preco</label>
                        <input asp-for="preco_origem" type="text" class="form-control" id="" placeholder="Preco:" />
                    </div>

                    <button type="submit" class="btn btn-primary">Incluir</button>

                </div>
            </form>
        </div>
    </div>
</div>
